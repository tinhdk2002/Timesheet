{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NestJS",
            "runtimeArgs": [
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register"
            ],
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "outFiles": ["${workspaceFolder}/src/**/*.ts"],
            "sourceMaps": true,
            "restart": true,   
            "console": "integratedTerminal", 
            "internalConsoleOptions": "neverOpen", 
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
